<?xml version="1.0"?>
<block>
  <name>EKF</name>
  <key>howto_ekf2_ff</key>
  <category>D-Tx beamforming</category>
  <import>import transmit_node</import>
  <make>transmit_node.howto_ekf2_ff($sample_rate, $Tm, $initial_freq, $elts_Q, $elts_R)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Sample rate</name>
    <key>sample_rate</key>
    <type>real</type>
  </param>

  <param>
    <name>Tm</name>
    <key>Tm</key>
    <value>0.050</value>
    <type>real</type>
  </param>

  <param>
    <name>Initial freq.</name>
    <key>initial_freq</key>
    <type>real</type>
  </param>

  <param>
    <name>Elements Q</name>
    <key>elts_Q</key>
    <value>0.05, 1, 1, 38</value>
    <type>real_vector</type>
  </param>

  <param>
    <name>Elements R</name>
    <key>elts_R</key>
    <value>0.0000000225, 0.0000000225, 100</value>
    <type>real_vector</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>freq</name>
    <type>float</type>
  </sink>

  <sink>
    <name>phase</name>
    <type>float</type>
  </sink>  

  <sink>
    <name>delay</name>
    <type>float</type>
  </sink>

  <sink>
    <name>secs</name>
    <type>s64</type>
  </sink>

  <sink>
    <name>fracs</name>
    <type>f64</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>filt phase</name>
    <type>float</type>
  </source>

  <source>
    <name>filt freq</name>
    <type>float</type>
  </source>

  <source>
    <name>secs</name>
    <type>s64</type>
  </source>

  <source>
    <name>fracs</name>
    <type>f64</type>
  </source>

  <doc>
Extended Kalman Filter
  </doc>
</block>
